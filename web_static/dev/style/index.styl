*
  border 0px
  margin 0px
  padding 0px

body
  font-size 18px
  background-color #27214b
  color white
  font-family: 'Open Sans', sans-serif
  overflow-x hidden

.list
  padding 20px
  .actualData
    padding 30px 0px 50px 0px
    .row
      padding 10px 5px
      max-width 670px
      border-radius 13px
      display grid
      grid-template-columns 50px 40px 40px 130px 130px 130px 130px
      grid-template-rows 25px 25px 25px 25px
      background-color #27214b
      transition 0.2s background-color
      &:hover
        background-color #1c032a
      .position
        grid-column 1 / 2
        grid-row 1 / 5
        justify-self center
        place-self center
      .icon
        grid-column 2 / 4
        grid-row 1 / 5
        justify-self center
        place-self center
        padding 5px
        border-radius 10px
        background-color #1c032a
        overflow hidden
        .holder
          height 60px
          width 60px
      .tag
        grid-column 4
        grid-row 1 / 3
        justify-self center
        place-self center
        font-size 25px
        font-weight bold
      .rating
        justify-self center
        place-self center
        display flex
        justify-content center
        align-items center
        flex-direction column
        span:nth-child(1)
          font-size 17px
          color #8e8a8a
          line-height 0.7
        span:nth-child(2)
          font-size 19px
          font-weight bold
          color white
      .clanRating
        grid-column 5
        grid-row 1 / 3
      .winrate
        grid-column 6
        grid-row 1 / 3
      .global
        grid-column 7
        grid-row 1 / 3
      .stronghold
        grid-column 4
        grid-row 3 / 5
      .members
        grid-column 5
        grid-row 3 / 5
      .battles
        grid-column 6
        grid-row 3 / 5

.header
  position fixed
  bottom 0px
  left 0px
  width 100%
  border-radius 17px 17px 0px 0px
  background-color #0d0222
  .top
    display flex
    justify-content space-between
    padding 10px 20px
    h2
      font-size 30px
      font-weight 800
  .promo
    height 75px
    transition height 0.3s
    will-change height
    .promoInner
      box-sizing border-box
      height 75px
      padding 10px 20px
      h1
        min-height 60px
  .promo.hidden
    height 0px

button.outline.dark
  color white
  background-color rgba(95,10,204,0)
  padding 4px 15px
  margin 0px 5px
  font-size 18px
  font-weight bold
  border 2px solid #5f0acc
  border-radius 12px
  cursor pointer
  transition background-color 0.2s
  &:hover
    background-color rgba(95,10,204,0.6)

.login
  position fixed
  top 0px
  left 0px
  height 100vh
  width 100vw
  z-index 0
  display none
.login.show
  background-color rgba(0,0,0,0.5)
  z-index 1
  display flex
  justify-content center
  align-items center
  .contents
    width 100%
    max-width 400px
    text-align center
    
