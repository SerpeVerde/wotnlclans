*
  border 0px
  margin 0px
  padding 0px

body
  font-size 18px
  background-color #27214b
  color white
  font-family 'Open Sans', sans-serif
  overflow-x hidden
  overflow-y scroll

.settings
  padding 20px

.list
  padding 20px
  .title
    padding 30px 0px 20px 0px
    h2
      font-size 50px
      font-weight 700
  .filters
    padding 0px 0px 20px 0px
    .filterOnList
      margin-top 10px
      button 
        margin-top 10px
  .actualData
    padding 0px 0px 80px 0px
    .loading
      font-size 33px
      font-weight bold
      color rgba(255,255,255,0.2)
      display flex
      justify-content center
      align-items center
      max-width 700px
      padding 0px 20px
    .row
      padding 10px 5px
      max-width 700px
      border-radius 13px
      display grid
      grid-template-columns 50px 40px 40px 130px 130px 130px 130px 40px
      grid-template-rows 25px 25px 25px 25px
      background-color #27214b
      transition 0.2s background-color
      .position
        font-weight bold
        grid-column 1 / 2
        grid-row 1 / 5
        justify-self center
        place-self center
      .icon
        grid-column 2 / 4
        grid-row 1 / 5
        justify-self center
        place-self center
        padding 5px
        border-radius 10px
        background-color #1c032a
        overflow hidden
        .holder
          height 60px
          width 60px
      .tag
        grid-column 4
        grid-row 1 / 3
        justify-self center
        place-self center
        font-size 25px
        font-weight bold
      .rating
        justify-self center
        place-self center
        display flex
        justify-content center
        align-items flex-start
        flex-direction column
        span:nth-child(1)
          font-size 17px
          color #8e8a8a
          line-height 0.7
        span:nth-child(2)
          font-size 19px
          font-weight bold
          color white
          display inline-block
          padding-top 3px
      .clanEfficiency
        grid-column 5
        grid-row 1 / 3
      .clanRating
        grid-column 6
        grid-row 1 / 3
      .winrate
        grid-column 7
        grid-row 1 / 3
      .global
        grid-column 7
        grid-row 3 / 5
      .stronghold
        grid-column 4
        grid-row 3 / 5
      .members
        grid-column 5
        grid-row 3 / 5
      .battles
        grid-column 6
        grid-row 3 / 5
      .moreinfo
        grid-column 8
        grid-row 1 / 5
        display flex
        justify-content center
        align-items center
        span 
          transition 0.2s opacity
          opacity 0
          height 40px
          width 40px
          cursor pointer
          svg
            fill white
      &:hover
        background-color #1c032a
        .moreinfo span
          opacity 0.7
.header
  position fixed
  bottom 0px
  left 0px
  width 100%
  z-index 3
  border-radius 17px 17px 0px 0px
  background-color #0d0222
  .top
    display flex
    justify-content center
    align-items center
    padding 10px 20px 20px 20px
    .links
      display flex
      flex-direction row
    h2
      padding 0px 20px
      font-size 30px
      font-weight 800
      margin 0px 2px
      border-bottom 2px solid rgba(255,255,255,0)
      cursor pointer
      user-select none
      -moz-user-select none
      -webkit-user-select none
      -webkit-touch-callout none
    .selected
      border-bottom 2px solid rgba(255,255,255,0.77)
  .promo
    height 80px
    transition height 0.3s
    will-change height
    .promoInner
      box-sizing border-box
      height 80px
      padding 10px 20px
      p, h1
        position relative
        top -20px
        text-align center
      h1
        min-height 40px
        font-size 40px
      p
        min-height 10px
        font-weight 18px
      a
        font-weight bold
        text-decoration none
        color #a30acc
  .promo.hidden
    height 0px

button
  cursor pointer
  padding 4px 15px
  margin 0px 5px
  font-size 18px
  font-weight bold
  border 2px solid #5f0acc
  border-radius 12px
  transition background-color 0.2s
  &.dark
    color white
  &.outline
    background-color rgba(95,10,204,0)
    &:hover
      background-color rgba(95,10,204,0.6)
  &.selected
    background-color rgba(95,10,204,0.7)
    &:hover
      background-color rgba(95,10,204,1)
  &.dark:disabled
    background-color rgba(0,0,0,1)
    cursor not-allowed
    color rgb(138, 138, 138)
    border 2px solid #4c1c8a

.login
  position fixed
  top 0px
  left 0px
  height 100vh
  width 100vw
  z-index 0
  display none
.login.show
  background-color rgba(0,0,0,0.5)
  z-index 1
  display flex
  justify-content center
  align-items center
  .contents
    width 100%
    max-width 400px
    text-align center
    
.clanStatsContainer
  position fixed
  bottom 0px
  left 0px
  width 100vw
  height 100vh
  background-color white
  transform scale(0.98) translate(0px, 100vh)
  border-radius 10px
  transition transform 0.2s
  &.show
    border-radius 0px
    transform scale(1) translate(0px, 0vh)

.clanDetials
  height 100%
  width 100%
  overflow hidden
  display block
  z-index 4
  color black
  .clanDetialsInner
    height 100%
    width 100%
    overflow-y scroll
    overflow-x hidden
  .actionBar
    display flex
    justify-content space-between
    align-items center
    height 70px
    border-bottom 2px solid #eee
    .back
      padding 10px
      height 50px
      width 50px
      cursor pointer
    .isSponsor
      padding 0px 10px 1px 10px
      border 3px solid #df02ff
      margin 0px 10px
      border-radius 40px
      font-size 19px
      font-weight bold
      color white
      background-color #580089
  .icon
    display flex
    justify-content center
    align-items center
    padding 10px
    img
      padding 5px
      background-color #1c032a
      height 200px
      width 200px
      border-radius 35px
      box-shadow 0px 12px 77px -20px rgba(0,0,0,0.53)
  h1, h3
    text-align center
  .stats
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    padding 20px
    .block
      padding 5px
      display flex
      justify-content center
      align-items center
      flex-direction column
      .propertyName
        color #161616
    .one
      .value
        background-color #eee
        display inline-block
        padding 0px 12px
        border-radius 4px
        font-weight 600
    .multiple
      .values
        background-color #eee
        display flex
        flex-wrap nowrap
        border-radius 4px
        overflow hidden
        .value, .what
          display inline-block
        .value
          padding 0px 9px 0px 3px
          font-weight 600
        .what
          padding 0px 3px 0px 9px
          background-color #cae3ff
  .discription
    padding 20px

.graphAndStats 
  position fixed
  top 20px
  right 20px
  width calc(100vw - 780px)
  height calc(100vh - 200px)
  background-color white
  overflow hidden
  border-radius 13px
  .graph
    background-color white
    height 100%
    width 100%
    color rgba(0,0,0,0.3)
    display flex
    justify-content center
    align-items center
  .clanDetials
    background-color white
    height 100%
    width 100%
    position relative
    left 100%
    transform translateX(0%) translateY(-100%)
    transition transform 0.3s
  .show
    transform translateX(-100%) translateY(-100%)
    
.inputWrapper
  color white
  background-color rgba(95,10,204,0)
  border-radius 12px
  transition background-color 0.2s
  cursor text
  border 2px solid #5f0acc
  max-width 200px
  display flex
  justify-content flex-start
  align-items center
  flex-direction row
  box-sizing border-box
  input
    background-color rgba(0,0,0,0)
    font-size 19px
    min-width 100%
    color white
    padding 5px 35px 5px 12px
    border-radius 12px
    box-sizing border-box
  .isvg
    width 20px
    height 20px
  svg
    position relative
    left -30px
    width 20px
    height 20px
    fill white
    box-sizing border-box

.settings
  padding-bottom: 60px
  .fields
    display flex
    justify-content flex-start
    flex-wrap wrap

.settingsBlock
  max-width 500px
  width 100%
  padding 10px
  .discription
    padding-bottom 10px
  .error
    color #ef5350
    padding 7px
  .listEdit
    display flex
    flex-wrap wrap
  .listEdit, .rawEdit
    padding 20px 7px
    textarea
      padding 7px
      border-radius 6px
      font-size 14px
      resize horizontal
    .textItem
      width 178px
      padding 5px 5px 5px 0px
      display flex
      flex-wrap nowrap      
      .icon
        padding-left 3px
        height 30px
        svg
          height 30px
          fill #ffffff
          transition fill 0.2s
          cursor pointer
      .add:hover svg
        fill #43ff7e
      .remove:hover svg
        fill #fe5b5b
      .disabled svg
        fill gray
      textarea
        resize none
